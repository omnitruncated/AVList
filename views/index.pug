doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  meta(http-equiv='X-UA-Compatible' content='ie=edge')
  title Discovery App
  // Font Icon
  link(rel='stylesheet' href='fonts/material-icon/css/material-design-iconic-font.min.css')
  // Main css
  link(rel='stylesheet' href='css/style.css')
.main
  // Sign up form
  section.signup
    .container
      .signup-content
        .signup-form
          h2.form-title Sign up
          form#register-form.register-form(method='POST' action='/register')
            .form-group
              label(for='username')
                i.zmdi.zmdi-account.material-icons-name
              input#name(type='text' name='username' placeholder='Your Name')
            .form-group
              label(for='mail')
                i.zmdi.zmdi-email
              input#email(type='email' name='email' placeholder='Your Email')
            .form-group
              label(for='pass')
                i.zmdi.zmdi-lock
              input#pass(type='password' name='password' placeholder='Password')
            .form-group
              label(for='re-pass')
                i.zmdi.zmdi-lock-outline
              input#re_pass(type='password' name='re_pass' placeholder='Repeat your password')
            .form-group
              input#agree-term.agree-term(type='checkbox' name='agree-term')
              label.label-agree-term(for='agree-term')
                span
                  span
                | I agree all
                | statements in 
                a.term-service(href='#') Terms of service
            .form-group.form-button
              input#signup.form-submit(type='submit' name='signup' value='register')
        .signup-image
          figure
            img(src='images/signup-image.jpg' alt='sing up image')
          a#already-member.signup-image-link(href='#') I am already member
  // Sing in  Form
  section.sign-in
    .container
      .signin-content
        .signin-image
          figure
            img(src='images/signin-image.jpg' alt='sing up image')
          a#create-account.signup-image-link(href='#') Create an account
        .signin-form
          h2.form-title Sign In
          form#login-form.register-form(method='POST' action='/login')
            .form-group
              label(for='email')
                i.zmdi.zmdi-account
              input#email(type='email' name='email' placeholder='Your email')
            .form-group
              label(for='your_pass')
                i.zmdi.zmdi-lock
              input#your_pass(type='password' name='password' placeholder='Password')
            .form-group
              input#remember-me.agree-term(type='checkbox' name='remember-me')
              label.label-agree-term(for='remember-me')
                span
                  span
                | Remember me
            .form-group.form-button
              input#signin.form-submit(type='submit' name='signin' value='Log in')
          .social-login
            span.social-label Or login with
            ul.socials
              li
                a(href='#')
                  i.display-flex-center.zmdi.zmdi-facebook
              li
                a(href='#')
                  i.display-flex-center.zmdi.zmdi-twitter
              li
                a(href='#')
                  i.display-flex-center.zmdi.zmdi-google
// JS
script(src='vendor/jquery/jquery.min.js')
script(src='js/main.js')
script.
  $(".signup").hide();
  $("#create-account").click(function () {
  $(".signup").fadeIn();
  $(".sign-in").fadeOut();
  });
  $("#already-member").click(function () {
  $(".sign-in").fadeIn();
  $(".signup").fadeOut();
  });

